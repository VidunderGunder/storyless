{
  "private": true,
  "engineStrict": true,
  "engines": {
    "bun": ">=1.0.11",
    "node": ">=18.0.0 <19.0.0 >=20.0.0 <21.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:modules": "turbo run clean",
    "clean:root": "rm -rf node_modules && rm -rf .turbo",
    "clean": "bun clean:modules && bun clean:root",
    "reset": "turbo run clean && bun install",
    "reset:hard": "bun clean && rm -rf && rm -rf bun.lockb && bun install"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "@storyless/tsconfig": "*",
    "turbo": "latest"
  },
  "name": "storyless",
  "packageManager": "bun@1.0.11",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}

{
  "private": true,
  "engineStrict": true,
  "engines": {
    "bun": ">=1.0.12",
    "node": ">=18.0.0 <19.0.0 >=20.0.0 <21.0.0"
  },
  "packageManager": "bun@1.0.12",
  "scripts": {
    "preinstall": "bunx only-allow bun",
    "build": "turbo run build",
    "build:@storyless/docs": "turbo run build --filter='@storyless/docs'",
    "build:@storyless/react": "turbo run build --filter='@storyless/react'",
    "dev": "bun post-release && bun i && cd apps/docs && bun run dev",
    "dev:release": "bun pre-release && bun i && turbo run dev",
    "dev:docs": "cd apps/docs && bun run dev",
    "lint": "turbo run lint",
    "test": "turbo run test --",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:modules": "turbo run clean",
    "clean:root": "rm -rf node_modules && rm -rf .turbo",
    "clean": "bun clean:modules && bun clean:root",
    "killports": "bun kill-port 3000 4200 4300 4400",
    "reset": "bun killports && bun clean && bun install",
    "reset:hard": "bun killports && bun clean && rm -rf bun.lockb && bun install",
    "pre-release": "turbo pre-release --filter='@storyless/scripts'",
    "version-packages": "changeset version",
    "changeset": "changeset",
    "post-release": "turbo post-release --filter='@storyless/scripts'",
    "publish-packages": "bun pre-release && turbo run build lint test --filter=@storyless/react && changeset && changeset version && changeset publish ; bun post-release"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.53.0",
    "kill-port": "^2.0.1",
    "oxlint": "^0.0.17",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "name": "storyless",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}

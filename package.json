{
  "private": true,
  "engineStrict": true,
  "engines": {
    "bun": ">=1.0.11",
    "node": ">=18.0.0 <19.0.0 >=20.0.0 <21.0.0"
  },
  "packageManager": "bun@1.0.11",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test --",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:modules": "turbo run clean",
    "clean:root": "rm -rf node_modules && rm -rf .turbo",
    "clean": "bun clean:modules && bun clean:root",
    "killports": "bun kill-port 3000 3001",
    "reset": "bun killports && bun clean && bun install",
    "reset:hard": "bun killports && bun clean && rm -rf && rm -rf bun.lockb && bun install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "pre-release": "turbo pre-release --filter='@sectoralarm-cloud/scripts'",
    "post-release": "turbo post-release --filter='@sectoralarm-cloud/scripts'",
    "publish-packages": "bun pre-release && turbo run build lint test --filter=@sectoralarm-cloud/react-jupiter && changeset version && changeset publish ; bun post-release"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "@storyless/tsconfig": "*",
    "turbo": "latest"
  },
  "name": "storyless",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
